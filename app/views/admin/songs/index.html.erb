<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Songs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Songs</h1>
    <%= link_to "New song", new_admin_song_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="songs" class="w-full m-4 bg-purple-950">
   <% @songs.each do |song| %>
      <% bg_color = cycle('bg-purple-930', 'bg-purple-900') %>
      
      <div class="flex w-full p-3 items-center justify-between <%= bg_color %>">
        
        <div class="flex-grow items-center w-1/12 ml-5">
          <h2 class="text-gray-400"><%= song.title %></h2>
        </div>

        <div class="flex-grow flex items-center justify-center text-gray-400 w-1/12">
          <%= song.artists.pluck(:name).join(", ") %>
        </div>

        <div class="flex-grow flex items-center justify-center w-1/12">
          <h2 class="text-gray-400">
            <% if song.duration.present? %>
              <%= song.duration.strftime('%M:%S') %></h2>
            <% else %>
            00:00
            <% end %>
        </div>

        <p>
          <%= link_to "Show this song", [:admin, song], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>



</div>
