<div id="<%= dom_id song %>">
  <div>
    <% if song.image.attached? %>
      <%= image_tag url_for(song.image), class: "w-10 h-10" %>
    <% end %>
  </div>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= song.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Artist:</strong>
    <%= song.artists.pluck(:name).join(", ") %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Genre:</strong>
    <% if song.genre == "1" %>
      Pop
    <% elsif song.genre == "2" %>
      Rock
    <% elsif song.genre == "3" %>
      Classic
      <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Release date:</strong>
    <%= song.release_date %>
  </p>

  <% if @song.file.attached? %>
  <audio controls>
    <source src="<%= url_for(@song.file) %>" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>
<% else %>
  <p>No file attached</p>
<% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= song.duration %>
  </p>

</div>
